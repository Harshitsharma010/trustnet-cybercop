{
  "manifest_version": 3,
  "name": "TrustNet CyberCop",
  "version": "1.0",

  "permissions": [
    "tabs",
    "storage",
    "notifications"
  ],

  "host_permissions": [
    "<all_urls>",
    "http://127.0.0.1:5000/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
